generator client {
  provider = "prisma-client-js"
  output   = "./prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Notification {
  id            Int       @id @default(autoincrement())
  itemId        Item      @relation(fields: [itemId], references: [id])
  message       String?   
  date          DateTime  @default(now())
}