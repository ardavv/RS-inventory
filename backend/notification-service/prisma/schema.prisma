generator client {
  provider = "prisma-client-js"
  output   = "./prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Notification {
  notifId       Int         @id @default(autoincrement())
  itemId        Int
  message       Text?
  notifDate     Timestamp   @default(now())
  Item          Item        @relation(fields: [itemId], references: [itemId], onDelete: NoAction, onUpdate: NoAction)
}